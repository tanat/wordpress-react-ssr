html, body
  padding 0
  margin 0

body
  background #eee

li
  list-style none

a
  text-decoration none

#top
  .card
    margin 0 16px
    padding-left 8px
    background #fff
    box-shadow 2px 2px 2px rgba(0,0,0,0.3)

#article
  width 920px
  padding 16px
  background #fff
  margin 16px auto
  box-shadow 2px 2px 2px rgba(0,0,0,0.3)

  .like_btton
    width 180px
    height 32px
    background #fff
    border 1px solid #000

    &.on
      background #000
      color #fff

  .article_date
    text-align right

  .article_body
    margin-top 32px
    border-top 1px solid #ddd